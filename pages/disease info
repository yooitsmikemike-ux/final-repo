import React, { useState } from "react";
import { base44 } from "@/api/base44Client";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Card, CardContent } from "@/components/ui/card";
import { Search, Stethoscope, AlertTriangle, Lightbulb, Shield, Pill } from "lucide-react";

export default function DiseaseInfo() {
  const [searchQuery, setSearchQuery] = useState("");
  const [diseaseData, setDiseaseData] = useState(null);
  const [isLoading, setIsLoading] = useState(false);

  const commonDiseases = [
    "COVID-19",
    "Dengue",
    "Malaria",
    "Typhoid",
    "Tuberculosis",
    "Diabetes",
    "Hypertension",
    "Asthma",
    "Pneumonia",
    "Influenza",
  ];

  const handleSearch = async (disease = searchQuery) => {
    if (!disease.trim()) return;

    setIsLoading(true);
    setDiseaseData(null);

    try {
      const response = await base44.integrations.Core.InvokeLLM({
        prompt: `Provide comprehensive information about ${disease} in simple, clear English suitable for general public awareness.

Structure the response as:
- disease_info: What is this disease? (2-3 sentences)
- symptoms: List of key symptoms (5-7 points)
- awareness: Important things to know (3-4 points)
- prevention: How to prevent (4-6 points)
- solutions: Treatment options and what to do (3-5 points)

Be informative but easy to understand. Avoid complex medical terms.`,
        response_json_schema: {
          type: "object",
          properties: {
            disease_name: { type: "string" },
            disease_info: { type: "string" },
            symptoms: {
              type: "array",
              items: { type: "string" },
            },
            awareness: {
              type: "array",
              items: { type: "string" },
            },
            prevention: {
              type: "array",
              items: { type: "string" },
            },
            solutions: {
              type: "array",
              items: { type: "string" },
            },
          },
        },
      });

      setDiseaseData(response);
      setSearchQuery("");
    } catch (error) {
      console.error("Error fetching disease info:", error);
    }

    setIsLoading(false);
  };

  const InfoSection = ({ title, icon: Icon, items, bgColor, iconColor, borderColor }) => (
    <Card className={`${bgColor} border-2 ${borderColor} shadow-md`}>
      <CardContent className="p-5">
        <div className="flex items-center gap-2 mb-4">
          <div className={`w-10 h-10 ${iconColor} bg-opacity-20 rounded-lg flex items-center justify-center`}>
            <Icon className={`w-5 h-5 ${iconColor.replace('bg-', 'text-')}`} />
          </div>
          <h3 className="text-lg font-bold text-gray-900">{title}</h3>
        </div>
        <ul className="space-y-2">
          {items.map((item, index) => (
            <li key={index} className="flex items-start gap-2 text-gray-700">
              <span className="text-purple-600 font-bold mt-1">‚Ä¢</span>
              <span className="leading-relaxed">{item}</span>
            </li>
          ))}
        </ul>
      </CardContent>
    </Card>
  );

  return (
    <div className="h-full overflow-y-auto bg-gradient-to-b from-blue-50 to-white">
      <div className="max-w-5xl mx-auto px-6 py-8">
        {/* Header */}
        <div className="text-center mb-8">
          <div className="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-cyan-400 to-cyan-600 rounded-2xl shadow-lg mb-4">
            <Stethoscope className="w-8 h-8 text-white" />
          </div>
          <h1 className="text-3xl font-bold text-gray-900 mb-2">
            Hey there! Learn About Diseases üìö
          </h1>
          <p className="text-gray-600">
            Get comprehensive information about diseases and health conditions
          </p>
        </div>

        {/* Search Bar */}
        <Card className="shadow-lg border-none mb-8">
          <CardContent className="p-6">
            <div className="flex gap-3">
              <Input
                value={searchQuery}
                onChange={(e) => setSearchQuery(e.target.value)}
                onKeyPress={(e) => e.key === "Enter" && handleSearch()}
                placeholder="Search for a disease (e.g., COVID-19, Dengue, Diabetes)"
                className="h-14 rounded-xl text-lg border-gray-300 focus:border-cyan-500 focus:ring-cyan-500"
                disabled={isLoading}
              />
              <Button
                onClick={() => handleSearch()}
                disabled={isLoading || !searchQuery.trim()}
                className="bg-gradient-to-r from-cyan-500 to-cyan-600 hover:from-cyan-600 hover:to-cyan-700 h-14 px-8 rounded-xl shadow-md"
              >
                <Search className="w-5 h-5" />
              </Button>
            </div>

            {/* Quick Search Tags */}
            <div className="mt-4">
              <p className="text-sm font-medium text-gray-600 mb-3">Quick search:</p>
              <div className="flex flex-wrap gap-2">
                {commonDiseases.map((disease) => (
                  <Button
                    key={disease}
                    variant="outline"
                    size="sm"
                    onClick={() => handleSearch(disease)}
                    disabled={isLoading}
                    className="rounded-full hover:bg-cyan-50 hover:border-cyan-300"
                  >
                    {disease}
                  </Button>
                ))}
              </div>
            </div>
          </CardContent>
        </Card>

        {/* Loading State */}
        {isLoading && (
          <div className="text-center py-12">
            <div className="inline-block w-12 h-12 border-4 border-cyan-200 border-t-cyan-600 rounded-full animate-spin mb-4" />
            <p className="text-gray-600">Fetching disease information...</p>
          </div>
        )}

        {/* Disease Information */}
        {diseaseData && !isLoading && (
          <div className="space-y-6">
            {/* Disease Overview */}
            <Card className="bg-gradient-to-r from-purple-500 to-purple-600 text-white shadow-lg border-none">
              <CardContent className="p-6">
                <div className="flex items-center gap-3 mb-3">
                  <Stethoscope className="w-8 h-8" />
                  <h2 className="text-2xl font-bold">{diseaseData.disease_name}</h2>
                </div>
                <p className="text-purple-50 leading-relaxed text-lg">
                  {diseaseData.disease_info}
                </p>
              </CardContent>
            </Card>

            {/* Symptoms */}
            <InfoSection
              title="Symptoms"
              icon={AlertTriangle}
              items={diseaseData.symptoms}
              bgColor="bg-red-50"
              iconColor="bg-red-500"
              borderColor="border-red-200"
            />

            {/* Awareness */}
            <InfoSection
              title="Awareness"
              icon={Lightbulb}
              items={diseaseData.awareness}
              bgColor="bg-yellow-50"
              iconColor="bg-yellow-500"
              borderColor="border-yellow-200"
            />

            {/* Prevention */}
            <InfoSection
              title="Prevention"
              icon={Shield}
              items={diseaseData.prevention}
              bgColor="bg-green-50"
              iconColor="bg-green-500"
              borderColor="border-green-200"
            />

            {/* Solutions */}
            <InfoSection
              title="Solutions"
              icon={Pill}
              items={diseaseData.solutions}
              bgColor="bg-blue-50"
              iconColor="bg-blue-500"
              borderColor="border-blue-200"
            />

            {/* Disclaimer */}
            <Card className="bg-orange-50 border-2 border-orange-200">
              <CardContent className="p-5">
                <p className="text-sm text-orange-800">
                  <strong>‚ö†Ô∏è Important:</strong> This information is for awareness purposes only. 
                  Always consult qualified healthcare professionals for proper diagnosis and treatment. 
                  In case of emergency, call 108 or visit the nearest hospital immediately.
                </p>
              </CardContent>
            </Card>
          </div>
        )}
      </div>
    </div>
  );
}
